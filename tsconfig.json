    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "paths": {
      "@App/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules",
    "./src/**/*.spec.ts",
  ]
}